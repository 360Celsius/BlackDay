<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>

<!--        <variable-->
<!--            name="viewmodel"-->
<!--            type="com.a360celsius.basicstock.viewmodels.AllCompaniesTickerViewModel"-->
<!--            />-->

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical">


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/whether_animation"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:paddingTop="32dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_fileName="storm_showers_day.json"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="MissingConstraints" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/wheter_data_and_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toBottomOf="@+id/whether_animation"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/temp_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_thin"
                android:text="26"
                android:textColor="@color/white"
                android:textSize="134dp" />


            <TextView
                android:id="@+id/temp_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" \u2103"
                android:textColor="@color/gray"
                android:textSize="32dp"
                android:fontFamily="@font/roboto" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toBottomOf="@+id/wheter_data_and_type"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="London"
                android:textColor="@color/gray"
                android:textSize="24dp"
                android:fontFamily="@font/roboto"/>

            <TextView
                android:id="@+id/comma_seperator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=", "
                android:textColor="@color/gray"
                android:textSize="24dp"
                android:fontFamily="@font/roboto"/>

            <TextView
                android:id="@+id/country_cc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UK"
                android:textColor="@color/gray"
                android:textSize="24dp"
                android:fontFamily="@font/roboto"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/feels_like_and_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/location"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/feels_like_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Feeld like "
                android:textColor="@color/gray"
                android:textSize="16dp"
                android:fontFamily="@font/roboto"/>

            <TextView
                android:id="@+id/feels_like_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="32"
                android:textColor="@color/gray"
                android:textSize="16dp"
                android:fontFamily="@font/roboto"/>

            <TextView
                android:id="@+id/sun_set_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:text="Sunset "
                android:textColor="@color/gray"
                android:textSize="16dp"
                android:fontFamily="@font/roboto"/>

            <TextView
                android:id="@+id/sun_set_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18:45"
                android:textColor="@color/gray"
                android:textSize="16dp"
                android:fontFamily="@font/roboto"/>

        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>